@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Đăng nhập - Thư viện số</title>

    <!-- Bootstrap 3 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif;
            background: linear-gradient(135deg, #2b5876, #4e4376);
        }

        .login-container {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        /* 🔹 Bên trái */
        .login-left {
            flex: 1;
            background: url('https://cdnl.iconscout.com/lottie/premium/thumb/online-library-animation-gif-download-3009896.gif') center center no-repeat;
            background-size: cover;
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-10px);
        }

        }

        /* 🔹 Bên phải */
        .login-right {
            flex: 1;
            background-color: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 50px;
            text-align: center;
        }

        .login-box {
            width: 100%;
            max-width: 420px;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.25);
            padding: 40px;
            transition: all 0.4s ease;
        }

            .login-box:hover {
                box-shadow: 0 0 35px rgba(0,0,0,0.3);
            }

            .login-box h2 {
                margin-bottom: 30px;
                color: #333;
                font-weight: 700;
                font-size: 26px;
            }

        /* 🔹 Floating label kiểu cũ + mới kết hợp */
        .form-group {
            position: relative;
            margin-bottom: 25px;
        }

        .form-control {
            width: 100%;
            border-radius: 25px;
            height: 45px;
            padding: 10px 15px;
            border: 1px solid #ccc;
            transition: all 0.3s ease;
            font-size: 15px;
            background: transparent;
        }

            .form-control:focus {
                border-color: #4e4376;
                box-shadow: 0 0 5px rgba(78, 67, 118, 0.4);
                outline: none;
            }

        /* 🔹 Nhãn bay */
        .form-label {
            position: absolute;
            top: 9px;
            left: 25px;
            color: #999;
            border-radius: 10px;
            font-size: 15px;
            pointer-events: none;
            background: #fff;
            padding: 0 6px;
            transform-origin: top;
            transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1), color 0.25s ease, opacity 0.25s ease;
        }

        /* 🔹 Khi focus hoặc có text */
        .form-control:focus + .form-label,
        .form-control:not(:placeholder-shown) + .form-label {
            transform: translate(-4px, -16px) scale(0.85);
            color: #4e4376;
            opacity: 1;
        }


        /* 🔹 Icon */
        .input-icon {
            position: absolute;
            right: 18px;
            top: 13px;
            color: #aaa;
            font-size: 15px;
            cursor: pointer;
            transition: color 0.3s;
        }

            .input-icon:hover {
                color: #4e4376;
            }

        /* 🔹 Nút đăng nhập */
        .btn-login {
            width: 100%;
            border-radius: 25px;
            background: linear-gradient(90deg, #4e4376, #2b5876);
            color: white;
            font-size: 16px;
            font-weight: 600;
            padding: 12px;
            border: none;
            transition: 0.3s;
        }

            .btn-login:hover {
                color: white;
                transform: scale(1.03);
                background: linear-gradient(90deg, #5f4f91, #3d6992);
            }

        .login-links {
            margin-top: 20px;
        }

            .login-links a {
                color: #4e4376;
                text-decoration: none;
                font-weight: 500;
            }

                .login-links a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 992px) {
            .login-left

        {
            display: none;
        }

        .login-right {
            padding: 30px;
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-left"></div>

        <div class="login-right">
            <div class="login-box">
                <h2>Đăng nhập tài khoản</h2>
                <form id="loginForm" autocomplete="off">
                    <div class="form-group">
                        <input id="username" type="text" class="form-control" required placeholder=" ">
                        <label class="form-label" for="username">Tên đăng nhập</label>
                    </div>

                    <div class="form-group">
                        <input id="password" type="password" class="form-control" required placeholder=" ">
                        <label class="form-label" for="password">Mật khẩu</label>
                        <i class="fa-solid fa-eye-slash input-icon" id="togglePassword"></i>
                    </div>

                    <button type="submit" class="btn btn-login">Đăng nhập</button>

                    <div class="login-links">
                        <p>Chưa có tài khoản? <a href="/TaiKhoan/DangKy">Đăng ký ngay</a></p>
                        <p><a href="/TaiKhoan/QuenMatKhau">Quên mật khẩu?</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // 🔹 Giả lập đăng nhập
        document.getElementById('loginForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const username = document.getElementById('username').value.trim();
            if (username) {
                localStorage.setItem('loggedInUser', username);
                window.location.href = '/';
            }
        });

        // 🔹 Ẩn / hiện mật khẩu
        const toggle = document.getElementById('togglePassword');
        const password = document.getElementById('password');

        toggle.addEventListener('click', () => {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            toggle.classList.toggle('fa-eye');
            toggle.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>
